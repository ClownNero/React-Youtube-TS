{
  "compilerOptions": {
    "target": "es6", // 컴파일된 JavaScript 코드가 실행될 환경
    "lib": ["dom", "dom.iterable", "esnext", "es6"], // 컴파일러에 포함시킬 라이브러리 파일 목록
    "allowJs": true, // JavaScript 파일을 허용
    "skipLibCheck": true, // 선언 파일(*.d.ts)의 타입 체크를 건너뛰기
    "esModuleInterop": true, // 모든 import 문을 ES6 모듈로 가져오기 위해 필요
    "allowSyntheticDefaultImports": true, // 기본 내보내기가 없는 모듈을 기본 내보내기가 있는 것처럼 허용
    "strict": true, // 모든 엄격한 타입-체킹 옵션을 활성화
    "forceConsistentCasingInFileNames": true, // 대소문자를 구분하여 파일명 일관성 강제
    "noEmit": true, // 출력 파일을 생성하지 않음 (Babel 등 다른 도구를 사용하여 컴파일하는 경우 유용)
    "jsx": "react-jsx", // JSX 코드를 처리하는 방식 지정
    "module": "esnext", // 모듈 코드 생성을 위한 설정
    "moduleResolution": "node", // 모듈 해석 방식 지정
    "outDir": "./dist",
    "resolveJsonModule": true, // JSON 파일을 모듈처럼 가져올 수 있게 함
    "isolatedModules": true, // 모든 파일을 별도의 모듈로 간주
    "noFallthroughCasesInSwitch": true // switch 문에서 case를 통과하는 것을 방지
  },
  "include": ["src"], // 컴파일에 포함시킬 파일들의 패턴
  "exclude": ["node_modules", "build", "scripts"] // 컴파일에서 제외할 파일들의 목록
}
